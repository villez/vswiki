<div class="show-page-controls">
  <%= link_to edit_page_path(@page), class: "btn btn-default btn-sm" do %>
    <span class="glyphicon glyphicon-edit text-primary"></span> Edit page
  <% end %>
  <%= link_to @page, method: :delete, class: "btn btn-default btn-sm",
      data: { confirm: "Are you sure you want to delete this page??" } do %>
    <span class="glyphicon glyphicon-remove text-danger"></span> Delete page
  <%end%>
</div>
