<%= link_to edit_page_path(@page), class: "btn btn-default btn-sm" do %>
  <span class="glyphicon glyphicon-edit text-primary"></span> Edit
<% end %>
<%= button_tag type: "button", class: "btn btn-default btn-sm",
    data: { toggle: "modal", target: "#delete-confirm" } do %>
  <span class="glyphicon glyphicon-remove text-danger"></span> Delete
<% end %>
