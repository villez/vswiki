<% provide(:title, "New page") %>

<div class="row">
  <div class="col-xs 12 col-sm-12 col-md-12 col-lg12">
    <h1>New page</h1>

    <%= form_for @page do |f| %>
      <%= render "page_errors", page: f.object, prev_page: @prev_page %>

      <div class="form-group">  
        <%= f.label :title, "Page title" %>
        <%= f.text_field :title, required: true, class: "form-control" %>
      </div>

      <%= render "redirect_field", f: f %>

      <div class="form-group wikitext-edit">
        <%= f.label :wikitext, "Page contents" %>
        <%= f.text_area :wikitext, class: "form-control", rows: 23 %>
      </div>
      
      <%= render "edit_controls" %>
    <% end %>
  </div>
</div>
