<title><%= @page.wikititle %></title>

<div class="row">
  <div class="col-xs 12 col-sm-12 col-md-12 col-lg12">
    <h1><%= @page.title %></h1>
  </div>
</div>

<div class="row">
  <div class="col-xs 12 col-sm-12 col-md-12 col-lg12">
    <div class="formatted-page-content">
      <%= raw(@page.formatted_html) %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-xs 12 col-sm-12 col-md-12 col-lg12">
    <%= link_to "Edit page", edit_page_path(@page), class: "btn btn-primary btn-sm" %>
    <%= link_to "Delete page", @page, method: :delete, class: "btn btn-danger btn-sm",
          data: { confirm: "Are you sure you want to delete this page??" } %>
  </div>
</div>
