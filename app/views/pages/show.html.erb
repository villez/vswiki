<% provide(:title, @page.title) %>

<div class="row">
  
  <%= render "sidebar" %>
  
  <div class="col-xs-12 col-sm-10 page-content">
    <h1><%= @page.title %></h1>

    <div class="show-page-controls-top">
      <%= render "show_controls" %>
    </div>

    <div class="formatted-page-content">
      <%= raw(@page.formatted_html) %>
    </div>
    
    <div class="show-page-controls-bottom">
      <%= render "show_controls" %>
    </div>
  </div>
</div>

